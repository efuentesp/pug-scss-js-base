mixin field-input(id, _label="", required=false, size="small")
  - var input_id = "input_" + id
  - var size_class = "is-" + size
  .field
    label= _label
    if required
      span.required *
    .control
      input.input(id=input_id, class=size_class)

mixin field-date(id, _label="")
  - var input_id = "input_" + id
  - var btn_id = "btn_" + id
  .field
      label= _label
      .control.has-addons
        input.input.is-small(id=input_id)
        button.is-icon(id=btn_id)
            i.fa.fa-calendar.icon-button

mixin field-plus-minus(id, _label="")
  - var input_id = "input_" + id
  - var btn_plus_id = "btn_plus_" + id
  - var btn_minus_id = "btn_minus_" + id
  .field
      label= _label
      .control.has-addons
        input.input.is-small(id=input_id)
        button.is-icon.is-green(id=btn_plus_id)
            i.fa.fa-plus-circle.fa-lg.icon-button
        button.is-icon.is-red(id=btn_minus_id)
            i.fa.fa-minus-circle.fa-lg.icon-button

mixin field-options(id, ...items)
  .field
      .control
        each item in items
          input(type="radio" name=id value=item.key)
          = item.value
          br

