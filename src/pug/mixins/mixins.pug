mixin collapsible-panel(id)
  - var chk_toggle_id = "chk_toggle_" + id
  .collapsible(id=id)
    .panel-bar
      input.toggle(type="checkbox" id=chk_toggle_id checked hidden)
      label.panel-label(for=chk_toggle_id)
        i.fa.fa-minus
    .panel-content.is-visible
      block